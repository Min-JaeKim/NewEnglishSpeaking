<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:background="@drawable/background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:paddingTop="10dp"
            android:layout_gravity="center"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:text="날짜"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#6E6E6E" />

            <TextView
                android:id="@+id/testName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_below="@+id/testpos"
                android:layout_alignLeft="@id/date"
                android:text="pet"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#6E6E6E" />


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignTop="@+id/testpos"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="0dp"
                android:layout_marginRight="5dp"
                app:srcCompat="@drawable/speakeng" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_background"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp">

            <TextView
                android:id="@+id/question1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/question"
                android:padding="10dp"
                android:paddingHorizontal="16dp"
                android:paddingTop="12dp"
                android:elevation="2dp"
                android:textSize="15dp"
                android:textColor="#fff"
                android:text="Question1."
                />

            <TextView
                android:id="@+id/k_question1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="해석"
                android:textSize="10dp"/>

            <TextView
                android:id="@+id/answer1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="15dp"
                android:background="@drawable/answer"
                android:elevation="2dp"
                android:padding="10dp"
                android:layout_marginTop="12dp"
                android:text="이곳을 클릭하고 답변하세요"
                android:textColor="#fff"
                android:textSize="15dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MA1">

                <TextView
                    android:id="@+id/score1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="100%\n일치"
                    android:textColor="#6E6E6E"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="13dp"
                    android:layout_toLeftOf="@id/modelAnswer1"/>

                <TextView
                    android:id="@+id/modelAnswer1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/modelanswer"
                    android:elevation="2dp"
                    android:padding="10dp"
                    android:text="모범 답안1."
                    android:textColor="#fff"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/k_answer1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/modelAnswer1"
                    android:gravity="end"
                    android:text="해석"
                    android:textSize="10dp"/>

            </RelativeLayout>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/question2"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/question"
                android:padding="10dp"
                android:paddingHorizontal="16dp"
                android:elevation="2dp"
                android:textSize="15dp"
                android:textColor="#fff"
                android:text="Question2."
                />
            <TextView
                android:id="@+id/k_question2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="해석"
                android:textSize="10dp"/>
            <TextView
                android:id="@+id/answer2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="end"
                android:background="@drawable/answer"
                android:elevation="2dp"
                android:padding="10dp"
                android:text="이곳을 클릭하고 답변하세요."
                android:textColor="#fff"
                android:textSize="15dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/MA2">
                <TextView
                    android:id="@+id/score2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="100%\n일치"
                    android:textColor="#6E6E6E"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:layout_toLeftOf="@id/modelAnswer2"/>

                <TextView
                    android:id="@+id/modelAnswer2"
                    android:layout_marginBottom="5dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/modelanswer"
                    android:elevation="2dp"
                    android:padding="10dp"
                    android:text="Model Answer2."
                    android:textColor="#fff"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/k_answer2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/modelAnswer2"
                    android:gravity="end"
                    android:text="해석"
                    android:textSize="10dp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/question3"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/question"
                android:padding="10dp"
                android:paddingHorizontal="16dp"
                android:elevation="2dp"
                android:textSize="15dp"
                android:textColor="#fff"
                android:text="Question3."
                />
            <TextView
                android:id="@+id/k_question3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="해석"
                android:textSize="10dp"/>
            <TextView
                android:id="@+id/answer3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="end"
                android:background="@drawable/answer"
                android:elevation="2dp"
                android:padding="10dp"
                android:text="이곳을 클릭하고 답변하세요."
                android:textColor="#fff"
                android:textSize="15dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/MA3">

                <TextView
                    android:id="@+id/score3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="0%\n일치"
                    android:textColor="#6E6E6E"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="13dp"
                    android:layout_toLeftOf="@id/modelAnswer3"/>

                <TextView
                    android:id="@+id/modelAnswer3"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/modelanswer"
                    android:elevation="2dp"
                    android:padding="10dp"
                    android:text="Model Answer3."
                    android:textColor="#fff"
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/k_answer3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/modelAnswer3"
                    android:gravity="end"
                    android:text="해석"
                    android:textSize="10dp"/>
            </RelativeLayout>
        </LinearLayout>
        <Button
            android:id="@+id/list"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_box"
            android:textSize="10dp"
            android:text="목록보기"
            />
    </LinearLayout>
</ScrollView>