<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_marginBottom="5dp"
    android:focusable="true"
    android:clickable="true"
    android:background="@drawable/list_background"
    android:gravity="center"
    android:layout_marginVertical="3dp">

    <TextView
        android:id="@+id/testNumber"
        android:layout_gravity="center_vertical"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="17dp"
        android:text="1"
        android:textSize="15dp"
        android:textColor="#6E6E6E"
        android:gravity="center"/>

    <TextView
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/testName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/testNumber"
        android:layout_marginLeft="20dp"
        android:text="Test Name"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="#6E6E6E" />

    <ImageView
        android:id="@+id/isTested"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/testName"
        android:layout_marginLeft="20dp"
        app:srcCompat="@drawable/ic_check_black_24dp"       />

    <ImageView
        android:id="@+id/ratingImg1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/ratingImg2"
        app:srcCompat="@drawable/star" />

    <ImageView
        android:id="@+id/ratingImg2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/ratingImg3"
        app:srcCompat="@drawable/star" />

    <ImageView
        android:id="@+id/ratingImg3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/ratingImg4"
        app:srcCompat="@drawable/star" />

    <ImageView
        android:id="@+id/ratingImg4"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/ratingImg5"
        app:srcCompat="@drawable/star" />

    <ImageView
        android:id="@+id/ratingImg5"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/delete"
        app:srcCompat="@drawable/star"
        android:layout_marginRight="3dp"/>

    <ImageView
        android:visibility="invisible"
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="3dp"/>

</RelativeLayout>