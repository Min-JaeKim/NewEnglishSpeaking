<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_marginBottom="5dp"
    android:focusable="true"
    android:clickable="true"
    android:background="@drawable/list_background"
    android:layout_marginVertical="3dp">

    <TextView
        android:id="@+id/postNumber"
        android:layout_gravity="center_vertical"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="17dp"
        android:text="1"
        android:textSize="13dp"
        android:textColor="#6E6E6E"
        android:gravity="center"/>

    <TextView
        android:id="@+id/postTestName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_alignTop="@+id/postNumber"
        android:layout_toRightOf="@+id/postNumber"
        android:layout_marginLeft="10dp"
        android:text="Test Name"
        android:textSize="13dp"
        android:textColor="#6E6E6E" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_alignTop="@+id/postNumber"
        android:layout_toRightOf="@+id/postTestName"
        android:layout_marginLeft="5dp"
        android:text="|"
        android:textSize="15dp"
        android:textColor="#6E6E6E" />

    <TextView
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/postTitle"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/postNumber"
        android:layout_toRightOf="@+id/postTestName"
        android:layout_marginLeft="15dp"
        android:text="Title"
        android:textSize="13dp"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textColor="#6E6E6E" />

    <TextView
        android:id="@+id/postID"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/postNumber"
        android:layout_toLeftOf="@+id/postDate"
        android:layout_marginLeft="20dp"
        android:text="user"
        android:textSize="9dp"
        android:gravity="center_vertical"
        android:textColor="#6E6E6E" />

    <TextView
        android:id="@+id/postDate"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/postNumber"
        android:layout_toLeftOf="@+id/delete"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        android:text="2019년 1월 1일"
        android:gravity="center"
        android:textSize="9dp"
        android:textColor="#6E6E6E" />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="3dp"
        android:src="@drawable/ic_close_black_24dp"/>
</RelativeLayout>